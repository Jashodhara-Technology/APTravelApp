                    </div>
                    <div class="col-xs-4">
                        <label> Email</label>
                        <input class="input-text full-width email" type="text" placeholder="Email" asp-for="SaleModel!.Email" />
                        <span asp-validation-for="SaleModel.Email"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <label> Remark</label>
                        <textarea rows="6" class="input-text full-width" placeholder="write remark here" asp-for="SaleModel!.Message"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <button type="submit" class="btn-large" asp-page-handler="Sales">Confirm Booking</button>
